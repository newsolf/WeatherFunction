<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_enabled="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <stroke android:width="@dimen/btn_stroke" android:color="@color/color_F14A48"/>
        <corners android:radius="@dimen/btn_radius"/>
            <size android:height="@dimen/btn_height" android:width="800dp"/>

        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/>
            <stroke android:width="@dimen/btn_stroke" android:color="@color/color_FAD0D0"/>
            <corners android:radius="@dimen/btn_radius"/>
            <size android:height="@dimen/btn_height" android:width="800dp"/>

        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/>
            <stroke android:width="@dimen/btn_stroke" android:color="@color/color_FAD0D0"/>
            <corners android:radius="@dimen/btn_radius"/>
            <size android:height="@dimen/btn_height" android:width="300dp"/>

        </shape>
    </item>
</selector>